{
  "name": "soldevkit-ui",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "Aman Satyawani",
    "github": "https://github.com/satyawaniama"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "fumadocs-mdx",
    "build:registry:internal": "tsx --tsconfig ./tsconfig.scripts.json ./src/scripts/build-registry.mts",
    "build:registry:external": "shadcn build ./src/__registry__/registry.autogenerated.json",
    "build:registry": "pnpm run build:registry:internal && pnpm run build:registry:external",
    "build:docs": "fumadocs-mdx",
    "prepare": "husky install",
    "format": "prettier --write ."
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx,json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.6",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "fumadocs-core": "^15.3.4",
    "fumadocs-docgen": "^2.1.0",
    "fumadocs-mdx": "^11.6.5",
    "fumadocs-ui": "^15.3.4",
    "lucide-react": "^0.510.0",
    "motion": "^12.23.12",
    "next": "15.3.2",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.4.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "shiki": "^3.9.2",
    "tailwind-merge": "^3.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/mdx": "^2.0.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "prettier": "3.6.2",
    "rimraf": "^6.0.1",
    "shadcn": "^2.5.0",
    "tailwindcss": "^4",
    "tsx": "^4.19.4",
    "tw-animate-css": "^1.2.9",
    "typescript": "^5"
  }
}
